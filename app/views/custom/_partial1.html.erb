
<% if arg1.errors.any? %>
  <div class="row">
    <div class="col-xs-8 col-xs-offset-2">
      <div class="panel panel-danger">
        <div class="panel-heading">
            <h2 class="panel-title">
                <%= pluralize(arg1.errors.count, "error") %>
                prohibiting this article from getting saved
            </h2>
            <div class="panel-body">
                <ul>
                    <% arg1.errors.full_messages.each do |msg| %>
                      <li>
                         <%= msg %>    
                      </li>
                    <% end %>
                </ul>
            </div>
        </div>  
      </div>       
    </div>
  </div>
<% end %>